<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Nombre %>
    <%= form.text_field :name, { :class => "form-control", :placeholder => "Ingrese el nombre del producto"  }  %>
  </div>

  <div class="field">
    <%= form.label :Descripción %>
    <%= form.text_area :description, { :class => "form-control", :placeholder => "Ingrese la descripción del producto" }  %>
  </div>

  <div class="field">
    <%= form.label :Precio %>
    <%= form.number_field :price, in: 1.0..10000000, step: 0.001, :class => "form-control", :placeholder => "Ingrese el precio" %>
  </div>

  <div class="field">
    <%= form.label :Stock %>
    <%= form.number_field :stock, { :class => "form-control", :placeholder => "Ingrese el stock" }  %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", :class => "btn btn-success"  %>
  </div>
<% end %>
