<p id="notice"><%= notice %></p>


<%= link_to 'Ir a Home', home_index_url , :class => "btn btn-dark" %>


 <section class="intro-single">
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
              <h1 class="title-single">Listado de Productos</h1>
              <span class="color-text-a">A continuación la lista de los productos.</span>
            </div>
          </div>
        </div>
      </div>
  </section>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Stock</th>
        <th colspan="3"><center>Accciones</center></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.stock %></td>
          <td><%= link_to 'Mostrar', product %></td>
          <td><%= link_to 'Editar', edit_product_path(product) %></td>
          <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Seguro de eliminar el producto?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


<%= link_to 'Nuevo Producto', new_product_path, :class => "btn btn-light"  %>
